<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gradient_color"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".RegisterActivity">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/reg_profilePic_imageview"
            android:layout_width="150dp"
            android:layout_height="143dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profilepic"
            app:civ_border_color="@color/instruo_orange"
            app:civ_border_width="3dp"
             />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/reg_earchPic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="110dp"
            android:layout_marginTop="111dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.659"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.267"
            app:srcCompat="?android:attr/actionModeWebSearchDrawable" />

    </RelativeLayout>




    <EditText
        android:id="@+id/reg_userName_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Desired User Name!"
        android:textColor="@color/background_white"

        android:textColorHint="@color/background_white"

        android:inputType="textPersonName"

         />


    <EditText
        android:id="@+id/reg_email_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email Id"
        android:textColor="@color/background_white"
        android:textColorHint="@color/background_white"

        android:inputType="textEmailAddress"

        />

    <EditText
        android:id="@+id/reg_college_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/background_white"
        android:textColorHint="@color/background_white"

        android:hint="Your College(Full Name)"
        android:inputType="text"/>





    <EditText
        android:id="@+id/reg_phone_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="@color/background_white"

        android:textColor="@color/background_white"

        android:hint="Phone Number"
        android:inputType="phone" />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/reg_progressbar"/>

    <EditText
        android:id="@+id/reg_fullName_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Full Name"
        android:textColor="@color/background_white"

        android:textColorHint="@color/background_white"

        android:inputType="textPersonName"

        />

        <EditText
            android:id="@+id/reg_password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/background_white"


            android:textColor="@color/background_white"

            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"/>



    <EditText
        android:id="@+id/reg_confpassword_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/background_white"

        android:textColor="@color/background_white"

        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"/>




    <Button
        android:id="@+id/reg_submit_button"
        android:layout_width="164dp"
        android:layout_height="44dp"
        android:textColor="@color/background_white"

        android:background="@drawable/buttonstyle"
        android:text="Submit Details"

         />


</LinearLayout>
</ScrollView>