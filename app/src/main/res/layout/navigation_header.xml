<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/header_layout"
    android:background="@drawable/gradient_color">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ProfilePic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/userdefaultpic"
        app:civ_border_color="#E48632"
        app:civ_border_width="3dp" />



    <TextView
        android:id="@+id/hname_user"
        android:layout_width="224dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:textSize="25sp"

        android:layout_alignParentTop="true"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="52dp"
        android:text="ABHISHEK KUMAR" />

    <TextView
        android:id="@+id/hemail"
        android:layout_width="225dp"
        android:layout_height="29dp"


        android:layout_alignParentEnd="true"

        android:layout_alignParentTop="true"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="86dp"
        android:textSize="17sp"
        android:text="abhi.kumar310@gmail.com"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/logoView"
        android:layout_width="116dp"
        android:layout_height="141dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/instruo_logo" />

</RelativeLayout>