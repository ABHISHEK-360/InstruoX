<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#30ffffff"
    android:backgroundTintMode="src_over"

    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="147dp"
        android:layout_height="195dp"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/instruo_logo" />

    <TextView
        android:id="@+id/name"
        android:layout_width="205dp"
        android:layout_height="37dp"
        android:fontFamily="@font/nunito_regular"
        android:text="INSTRUO-2018"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="28sp"

        app:layout_constraintBottom_toTopOf="@+id/desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="148dp"
        android:layout_height="26dp"
        android:fontFamily="@font/nunito_regular"
        android:text="The 10TH Edition"
        android:textAlignment="center"
        android:textColor="#ffffff"

        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <TextView
        android:id="@+id/desc2"
        android:layout_width="244dp"
        android:layout_height="46dp"
        android:fontFamily="@font/nunito_regular"
        android:text="The Largest Techno-Managment Fest of Kolkata"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc"
        app:layout_constraintVertical_bias="0.059" />

    <Button
        android:id="@+id/gSignIn"
        android:layout_width="245dp"
        android:layout_height="40dp"
        android:background="@color/background"

        android:drawableLeft="@drawable/common_google_signin_btn_icon_light_normal"
        android:fontFamily="@font/nunito_regular"
        android:gravity="left|center_vertical"
        android:text="Sign In with Google"

        android:textColor="#1871ba"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc2"
        app:layout_constraintVertical_bias="0.587" />

    <Button
        android:id="@+id/register"
        android:layout_width="101dp"
        android:layout_height="41dp"
        android:background="@color/background"
        android:fontFamily="@font/nunito_regular"

        android:text="Register"

        android:textColor="#1871ba"
        app:layout_constraintBottom_toTopOf="@+id/gSignIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc2"
        app:layout_constraintVertical_bias="0.584" />

    <Button
        android:id="@+id/Login"
        android:layout_width="101dp"
        android:layout_height="41dp"
        android:background="@color/background"
        android:fontFamily="@font/nunito_regular"

        android:text="Login"
        android:textColor="#1871ba"
        app:layout_constraintBottom_toTopOf="@+id/gSignIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.752"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc2"
        app:layout_constraintVertical_bias="0.584" />

    <TextView
        android:id="@+id/skipLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fontFamily="@font/nunito_regular"

        android:text="@string/skiplogin"
        android:onClick="skipLogin"
        android:textColor="#1871ba"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gSignIn" />

</android.support.constraint.ConstraintLayout>