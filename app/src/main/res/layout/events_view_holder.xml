<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="7dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="7dp"
    android:id="@+id/events_card_view"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_color_sec"
        >


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

            <ImageView
                android:id="@+id/event_view_holder_poster"

                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"/>

           <!-- <ImageView
                android:id="@+id/event_view_holder_poster"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"


                android:src="@drawable/technical_poster_reduced" />-->

            <TextView
                android:id="@+id/event_view_holder_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:layout_weight="1"
                android:alpha="0.9"


                android:background="@drawable/gradient_tert"
                android:fontFamily="@font/merriweather_bolditalic"
                android:paddingStart="@dimen/fab_margin"
                android:paddingTop="@dimen/fab_margin"
                android:paddingBottom="@dimen/fab_margin"
                android:paddingEnd="125dp"

                android:text="Event Name"
                android:textAlignment="textStart"

                android:textColor="#fa6d02"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/event_view_holder_poster" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="7dp"
                android:id="@+id/event_view_holder_register_button"
                android:text="Register"

                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/instruo_orange"

                android:background="@drawable/buttonstyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </android.support.constraint.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/event_view_holder_Venue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Venue:To be updated"

                android:textAlignment="textStart"
                android:padding="5dp"

                android:textColor="@color/background_white"
                android:textSize="15sp" />



            <TextView
                android:id="@+id/event_view_holder_Timing"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Timing:To be updated"
                android:textAlignment="textStart"
                android:padding="5dp"

                android:textColor="@color/background_white"
                android:textSize="15sp" />


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>