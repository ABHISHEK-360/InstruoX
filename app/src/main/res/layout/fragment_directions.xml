<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".HomeFragments.DirectionsFragment"
    android:background="@drawable/gradient_tert"
    android:id="@+id/directions_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/direction_iiest_1gate"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="10dp"
            android:onClick="getDirection"
            android:background="@drawable/buttonstyle"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="IIEST,First Gate" />

        <Button
            android:id="@+id/direction_netaji_bhawan"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:onClick="getDirection"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/buttonstyle"
            android:text="Netaji Bhawan" />

        <Button
            android:id="@+id/direction_regis_desk"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="10dp"
            android:onClick="getDirection"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/buttonstyle"
            android:gravity="center"
            android:text="Registration Desk" />

        <Button
            android:id="@+id/direction_i_hall"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:onClick="getDirection"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/buttonstyle"
            android:text="Institute-hall(I-Hall)" />
        <Button
            android:id="@+id/direction_new_building"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:onClick="getDirection"
            android:background="@drawable/buttonstyle"
            android:gravity="center"
            android:text="New Building/S &amp; T  Building" />

        <Button
            android:id="@+id/direction_hospital"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_margin="10dp"
            android:background="@drawable/buttonstyle"
            android:onClick="getDirection"
            android:text="Hospital" />

        <Button
            android:id="@+id/direction_a_seminar_hall"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:onClick="getDirection"
            android:background="@drawable/buttonstyle"
            android:text="Alumni Seminar Hall" />

        <Button
            android:id="@+id/direction_sengupta_hall"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/buttonstyle"
            android:onClick="getDirection"
            android:gravity="center"
            android:text="Sengupta Hall" />

        <Button
            android:id="@+id/direction_sen_hall_button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonstyle"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:onClick="getDirection"
            android:gravity="center"
            android:text="Sen Hall" />
    </LinearLayout>

</ScrollView>