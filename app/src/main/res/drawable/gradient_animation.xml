<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:drawable="@drawable/gradient_color_sec"
        android:duration="3000"/>
    <item
        android:duration="3000">
        <shape android:shape="rectangle">
            <gradient
                android:angle="225"
                android:endColor="#1a2980"
                android:startColor="#26d0ce" />

        </shape>
    </item>
    <item
        android:duration="3000">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#614385"
                android:startColor="#516395"
                android:angle="45"/>

        </shape>
    </item>
    <item
        android:duration="3000">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#1d2b64"
                android:startColor="#5E2435"
                android:angle="135"/>

        </shape>
    </item>
    <item
        android:duration="3000">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#040005"
                android:centerColor="#642B73"
                android:endColor="#C6426E"
                android:angle="45"
                android:type="linear"
                />

        </shape>
    </item>
</animation-list>